extends layout.jade
block content
    section#forgot.login-page.section-padding
        .container
            .row
                .col-sm-6
                    .row
                        .single-check
                            form(role='form' action="/change_password" method="POST")
                                .single-input.p-bottom50.clearfix
                                    .col-xs-12
                                        .check-title
                                            h3 Change Password
                                    .col-xs-12
                                        label New Password:
                                        .input-text
                                            input(type='text', name='email' value=email || '')
                                        .input-text
                                            input(type='password', name='password')
                                        .submit-text
                                            input(type='submit', name='submit', value='Change')

    block script
        style.
            #forgot {
                margin-top: 150px;
            }
