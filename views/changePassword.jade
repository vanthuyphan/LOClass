extends layout.jade
block content
    section#forgot.login-page.section-padding
        .container
            .row
                .col-xs-12.col-md-6.col-text-center
                    .section-title.about-title.text-center
                        h3 Change Password
                        .shape
                            img(src='/public/img/icon/t-shape.png', alt='Title Shape')
            .row
                .col-sm-6
                    .row
                        .single-check
                            form(role='form' action="/change_password" method="POST")
                                .single-input.p-bottom50.clearfix
                                    .col-xs-12
                                        label Email:
                                        .input-text
                                            input(type='text', name='email' value=email || '')
                                        label New Password:
                                        .input-text
                                            input(type='password', name='password')
                                        .submit-text
                                            input(type='submit', name='submit', value='Change')

    block script
        style.
            #forgot {
                margin-top: 150px;
            }
