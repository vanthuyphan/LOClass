    block script
        style.
            #details {
                margin-top: 150px;
            }
        script.
            var user = !{JSON.stringify(user || {})}
            var classes = !{JSON.stringify(classes || {})}
            var tabIndex = window.location.href.indexOf("tab");
            onStateChanged();
            if (tabIndex > -1) {
                var tabName = window.location.href.substring(tabIndex + 4, tabIndex+5);
                if (tabName == 2) {
                    $("#info").addClass('active');
                    $("#second-tab").addClass('active');
                    $("#first-tab").removeClass('active');
                    $("#pre").removeClass('active');
                }
            }
            if (user && user.code) {
                var remainingClasses = [];
                var myClasses = [];
                $.each(classes, function (index, claz) {
                    if (claz.studentClassCode) {
                        myClasses.push(claz)
                    } else {
                        remainingClasses.push(claz);
                    }
                })
                $('#myClasses').find('tbody').empty();
                $.each(myClasses, function (index, claz) {
                    var combo = claz.code + "," + claz.studentClassCode;
                    $('#myClasses').find('tbody')
                        .append($('<tr>')
                            .append($('<td>').css('display', 'none')
                                .append(claz.code)
                            )
                            .append($('<td>')
                                .append(claz.location)
                            )
                            .append($('<td>')
                                .append(claz.address)
                            )
                            .append($('<td>')
                                .append(claz.datetime)
                            )
                            .append($('<td>')
                                .append(claz.registed || 0).append("/").append(claz.classSize)
                            )
                            .append($('<td>')
                                .append("<button class='btn submit-text' onclick='unRegisterCourse(" + combo + ")'> Withdraw </button>")
                            )
                        )
                });
                $('#class').find('tbody').empty();
                $.each(remainingClasses, function (index, claz) {
                    var enrollButton = "";
                    if (claz.registed < claz.classSize) {
                        enrollButton = "<button class='btn submit-text' onclick='registerCourse(" + claz.code + ")'> Register </button>"
                    }
                    $('#class').find('tbody')
                        .append($('<tr>')
                            .append($('<td>').css('display', 'none')
                                .append(claz.code)
                            )
                            .append($('<td>')
                                .append(claz.location)
                            )
                            .append($('<td>')
                                .append(claz.address)
                            )
                            .append($('<td>')
                                .append(claz.datetime)
                            )
                            .append($('<td>')
                                .append(claz.registed || 0).append("/").append(claz.classSize)
                            )
                            .append($('<td>')
                                .append(enrollButton)
                            )
                        )
                });
            } else {
                $('#myClasses').hide();
                $('#class').find('tbody').empty();
                $.each(classes, function (index, claz) {
                    var enrollButton = "";
                    if (claz.registed < claz.classSize) {
                        enrollButton = "<button class='btn submit-text' onclick='registerCourse(" + claz.code + ")'> Register </button>"
                    }
                    $('#class').find('tbody')
                        .append($('<tr>')
                            .append($('<td>').css('display', 'none')
                                .append(claz.code)
                            )
                            .append($('<td>')
                                .append(claz.location)
                            )
                            .append($('<td>')
                                .append(claz.address)
                            )
                            .append($('<td>')
                                .append(claz.datetime)
                            )
                            .append($('<td>')
                                .append(claz.registed || 0).append("/").append(claz.classSize)
                            )
                            .append($('<td>')
                                .append(enrollButton)
                            )
                        )
                })
            }
            function registerCourse(code) {
                var user = !{JSON.stringify(user || {})}
                if (user && user.code) {
                    $.post('registerClass', {
                        userCode: user.code,
                        classCode: code,
                    }, function (res, err) {
                        location.reload();
                    })
                } else {
                    window.location = '/register?classCode=' + code;
                }
            }

            function unRegisterCourse(code, studentClassCode) {
                $.post('unRegisterClass', {
                    code: studentClassCode,
                    classCode: code
                }, function (res, err) {
                    location.reload();
                })
            }

            function onStateChanged() {
                var selected = $("#state :selected").text();
                var info = '';
                if (selected == "CALIFORNIA") {
                    info = `<br><b>California Bureau of Real Estate</b>
                        <br>1651 Exposition Blvd.
                        <br>Sacramento, CA 95815
                        <br><b>California Department of Business Oversight</b>
                        <br>One Sansome Street, Suite 600
                        <br>San Francisco, CA 94104-4428
                        <br><br>To register for a California NMLS licensing class phone 415-587-5435 or 650-294-8750
                        <br>California Mortgage Loan Officers can be licensed through either <a href='http://www.bre.ca.gov/Licensees/MLOLicense.html#5'> The California Bureau of Real Estate </a> (with a CA Real Estate License)or <a href='http://www.dbo.ca.gov/'>The California Department of Business Oversight </a> (without a CA Real Estate License).
                        <br> Both agencies require the national 20-hour class. Department of Business Oversight regulated loan officers require 2 hours of CA state law.
                        <br>LoanOfficerSchool.com will include your additional 2 hours of state law with our national 20-hour course at no additional cost.
                        <br><br>California does require a state test for licensing, requires 2 hours of CA state law for those that are currently NMLS licensed elsewhere, and requires 8 hours of continuing education (CE) for NMLS licensed mortgage loan officers annually`;
                }
                $("#requirements").html(info)
            }