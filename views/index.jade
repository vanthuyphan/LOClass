                                    section#services.section.section-padded
                                        .container
                                            .row.services
                                                .col-md-5
                                                    .service
                                                        .icon-holder
                                                            img.icon(src='/public/img/icon/house.png', alt='')
                                                        h4.heading
                                                            a(href='/classes?tab=1') Pre-license Education Class
                                                        p.description
                                                            | Some description about Pre-license Education Class
                                                .col-md-2
                                                    .service-middle
                                                        .icon-holder
                                                            img
                                                        h4.section-title.text-center AND
                                                .col-md-5
                                                    .service
                                                        .icon-holder
                                                            img.icon(src='/public/img/icon/house.png', alt='')
