extends layout.jade
block content
    // slider section start
    .slider-area.slider-one.clearfix
        #mainslider.slider
            div(data-src='/public/img/slider/1.jpg')
                .d-table
                    .d-tablecell
                        .container
                            .row
                                .col-xs-12
                                    .slide-text
